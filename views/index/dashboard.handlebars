<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>

{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                 <td><a href="/stories/show/{{id}}"></a>{{title}}</td>
                 <td>{{formatDate date 'MMMM Do YYYY'}}</td>
                 <td><span class="dash-status">{{status}}</span></td>
                 <td><a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>


                 <form id="delete-form" action="/stories/{{id}}?_method=DELETE" method="post">
                 <input type="hidden" name="_method" value="delete">
                    <button class="btn red" type="submit"><i class="fa fa-remove"></i> Delete</button>
                 </form>
                 </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories yet</p>
{{/if}}